<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/cardView"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="3dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gambarST"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/nimST"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:text="nim"
                android:layout_toRightOf="@+id/gambarST"
                android:textColor="@color/colorUtama"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/namaST"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nimST"
                android:layout_marginLeft="8dp"
                android:text="nama"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/gambarST" />

            <TextView
                android:id="@+id/kelasST"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/namaST"
                android:text="kelas"
                android:textSize="12dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/gambarST" />

            <TextView
                android:id="@+id/telpST"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kelasST"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@+id/gambarST"
                android:text="telepon"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/emailST"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/telpST"
                android:text="Email"
                android:textSize="12dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/gambarST" />

            <TextView
                android:id="@+id/sosmedST"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailST"
                android:text="Sosmed"
                android:textSize="12dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/gambarST" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>