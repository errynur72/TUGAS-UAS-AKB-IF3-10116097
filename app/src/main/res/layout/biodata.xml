<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailSeluruhTemanActivity"
    tools:showIn="@layout/activity_seluruh_teman">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/gambarST"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile" />

                <TextView
                    android:id="@+id/namaST"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nimST"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:paddingLeft="8dp"
                    android:text="Nama : Erry Nurhadiansyah"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorUtama"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/nimST"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gambarST"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="8dp"
                    android:text="NIM : 10116097"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorUtama"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kelasST"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nimST"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="40dp"
                    android:paddingLeft="8dp"
                    android:text="Kelas : AKB-3"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#a2a2a2"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/telpST"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kelasST"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginBottom="20dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Telp : 081220251997"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#a2a2a2"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/desST"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/telpST"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginBottom="20dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Deskripsi : Saya adalah seseorang yang slalu mencoba bermanfaat bagi orang lain."
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#a2a2a2"
                    android:textSize="14dp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

</RelativeLayout>
