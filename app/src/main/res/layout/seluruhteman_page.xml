<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/cari_list_teman"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:background="@drawable/border"
            app:defaultQueryHint="Vanadia..."></androidx.appcompat.widget.SearchView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="4dp"
            android:text="List Detail Seluruh Teman"
            android:textColor="@color/colorUtama"
            android:textSize="14dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewST"
            android:layout_width="match_parent"
            android:layout_height="425dp"
            android:layout_margin="3dp">

        </androidx.recyclerview.widget.RecyclerView>




    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:id="@+id/fab_plus"
        android:layout_width="58dp"
        android:layout_height="52dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="440dp"
        android:clickable="true"
        android:elevation="2dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/colorKedua"
        app:fabSize="normal"
        app:pressedTranslationZ="13dp" />

</RelativeLayout>